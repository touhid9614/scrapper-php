{
    "version": "1.0.0",
    "manifest_version": 2,
    "name": "sMedia Proxy Manager",
    "author": "Zaber Mahbub",
    "description": "An awesome extension to automatically authenticate selenium requests.",

    "permissions": 
    [
        "proxy",
        "tabs",
        "unlimitedStorage",
        "storage",
        "<all_urls>",
        "webRequest",
        "webRequestBlocking"
    ],

    "background": 
    {
        "scripts": ["background.js"]
    },

    "browser_action": 
    {
        "default_popup": "popup.html"
    },

    "icons": 
    {
        "16": "icon.png",
        "32": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    
    "minimum_chrome_version":"22.0.0"
}