{
	"manifest_version": 2,
	"name": "sMedia-Visual Scraper",
	"description": "An awesome extension for visual scraper!",
	"version": "1.0.0",
	"author": "Zaber Mahbub",

	"permissions": [
		"tabs",
		"contextMenus",
		"declarativeContent",
		"storage",
		"http://*/*",
		"https://*/*"
	],

	"background": {
		"scripts": ["background.js"]
	},

	"browser_action": {
		"default_popup": "popup.html"
	},

	"icons": {
		"16": "images/icon.png",
		"32": "images/icon.png",
		"48": "images/icon.png",
		"128": "images/icon.png"
	}
}
